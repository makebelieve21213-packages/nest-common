{
	"name": "@makebelieve21213-packages/nest-common",
	"version": "1.0.0",
	"description": "Common NestJS utilities, guards, interceptors, and shared modules for NakolenkeChain microservices",
	"type": "module",
	"main": "./dist/src/index.js",
	"types": "./dist/src/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/src/index.js",
			"default": "./dist/src/index.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/makebelieve21213-packages/nest-common.git"
	},
	"homepage": "https://github.com/makebelieve21213-packages/nest-common#readme",
	"bugs": {
		"url": "https://github.com/makebelieve21213-packages/nest-common/issues"
	},
	"keywords": [
		"nestjs",
		"utilities",
		"guards",
		"interceptors",
		"shared-modules",
		"microservices",
		"typescript"
	],
	"author": "Skryabin Aleksey",
	"license": "MIT",
	"packageManager": "pnpm@10.18.0",
	"engines": {
		"node": ">=22.11.0",
		"pnpm": ">=10.18.0"
	},
	"scripts": {
		"build": "pnpm run clean && tsc --build && tsc-alias && tsc-esm-fix",
		"clean": "rimraf dist tsconfig.tsbuildinfo",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"lint": "tsc --noEmit && eslint \"src/**/*.ts\"",
		"lint:fix": "tsc --noEmit && eslint \"src/**/*.ts\" --fix",
		"format": "prettier --check \"src/**/*.ts\"",
		"format:fix": "prettier --write \"src/**/*.ts\"",
		"prepare": "husky"
	},
	"dependencies": {
		"@makebelieve21213-packages/logger": "1.0.5",
		"@nestjs/common": "^11.1.6",
		"@nestjs/core": "^11.1.6",
		"@nestjs/microservices": "^11.1.3",
		"@nestjs/websockets": "^11.1.3",
		"@types/express": "^5.0.3",
		"axios": "^1.10.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"express": "^5.1.0",
		"joi": "^17.13.3",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@jest/globals": "^30.0.5",
		"@nestjs/testing": "^11.1.3",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jiti": "^2.4.0",
		"prettier": "^3.3.0",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"tsc-esm-fix": "^3.1.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.2"
	},
	"peerDependencies": {
		"@nestjs/common": "^11.0.0",
		"@nestjs/core": "^11.0.0",
		"@nestjs/microservices": "^11.0.0",
		"@nestjs/websockets": "^11.0.0",
		"rxjs": "^7.0.0"
	},
	"files": [
		"dist"
	]
}
